(package "cora/example/async/client"

  (import "cora/lib/net")
  (import "cora/lib/io")
  (import "cora/lib/async")
  (import "cora/lib/cml")

  (defun client-main ()
    (let conn (dial "127.0.0.1:8080")
      buf (make-buffer 11)
      (begin
	(recv conn buf)
	(display buf)
	(display "\n")
	(send conn "hello arthur")
	(net-close conn))))

  (spawn client-main)
  (main)
  )
