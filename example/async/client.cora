(define-library "cora/example/async/client"

  (import "cora/lib/net")
  (import "cora/lib/io")
  (import "cora/lib/async")
  (import "cora/lib/cml")

  (defun client-main ()
    (let fd (dial "127.0.0.1:8080")
      buf (make-buffer 11)
      (begin
	(recv fd buf)
	(display buf)
	(display "\n")
	(send fd "hello arthur")
	(net-close fd))))

  (spawn client-main)
  (main)
  )
